
{%- macro factor_sigmoid(c) -%}
    {%- set L = 1.0 -%}
    {%- set x0 = 81.0837 -%}
    {%- set k = -0.0897371 -%}
    {%- set denom = 1 + (e ** (-k * ((c|float(0)) - x0))) -%}
    {{ L / denom }}
{%- endmacro -%}

