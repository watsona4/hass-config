{% macro get_dc_context() %}{{- {'lookup_unit': lookup_unit, 'levels': levels} | tojson -}}{% endmacro %}

{% macro get_name(value, app, options) -%}
    {{- 'Wind • ' ~ H.get_default_desc(value, app, options) -}}
{%- endmacro %}

{% macro get_label(value, app, options) %}
    {%- set deg = states(options.direction) -%}
    {%- set dirs = ['N','NNE','NE','ENE','E','ESE','SE','SSE','S','SSW','SW','WSW','W','WNW','NW','NNW'] -%}
    {%- set dirtxt = (dirs[((deg|float(0)+11.25)/22.5)|int % 16]) if deg is not none else '—' -%}
    {%- set gust = u_convert_entity(options.gusts, options.display_unit) -%}
    {%- set gusttxt = ' (Gusts ' ~ H.humanize_unit(gust, options.display_unit) ~ ')' if gust is not none else '' -%}
    {{- dirtxt ~ ' ' ~ H.get_value(value, options) ~ gusttxt -}}
{% endmacro %}

{% macro get_short_label(value, app, options) %}
    {{- get_label(value, app, options) -}}
{% endmacro %}

{% macro get_long_label(value, app, options) %}
    {{- get_label(value, app, options) -}}
{% endmacro %}
