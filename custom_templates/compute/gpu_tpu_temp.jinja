{# # File: config/custom_templates/gpu_tpu_temp.jinja ## #}
{# Reuse CPU temperature macros for GPU/TPU with different TjMax defaults. #}

{% import 'config/custom_templates/cpu_temp.jinja' as cpu %}

{# Reasonable defaults (override per device if you know the spec):
   - GPU core target/limit often ~90–95°C
   - GPU memory (e.g., GDDR6X) runs warmer; allow ~100°C by default
   - GPU hotspot/junction sensor can be higher; allow ~105°C by default
   - TPU accelerators typically aim a bit lower; set ~90°C by default
#}
{% set GPU_TJMAX = 95 %}
{% set GPU_MEM_TJMAX = 100 %}
{% set GPU_HOTSPOT_TJMAX = 105 %}
{% set TPU_TJMAX = 90 %}

{# -------------------- GPU (core) -------------------- #}
{% macro level(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.level(temp, unit, tjmax_c) }}{% endmacro %}
{% macro name(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.name(temp, unit, tjmax_c) }}{% endmacro %}
{% macro short(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.short(temp, unit, tjmax_c) }}{% endmacro %}
{% macro long(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.long(temp, unit, tjmax_c) }}{% endmacro %}
{% macro icon(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.icon(temp, unit, tjmax_c) }}{% endmacro %}
{% macro color(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.color(temp, unit, tjmax_c) }}{% endmacro %}
{% macro desc(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.desc(temp, unit, tjmax_c) }}{% endmacro %}
{% macro label(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.label(temp, unit, tjmax_c) }}{% endmacro %}
{% macro chip(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.chip(temp, unit, tjmax_c) }}{% endmacro %}
{% macro advice(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.advice(temp, unit, tjmax_c) }}{% endmacro %}
{% macro is_warm(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.is_warm(temp, unit, tjmax_c) }}{% endmacro %}
{% macro is_hot(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.is_hot(temp, unit, tjmax_c) }}{% endmacro %}
{% macro is_critical(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.is_critical(temp, unit, tjmax_c) }}{% endmacro %}
{% macro throttle_risk(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.throttle_risk(temp, unit, tjmax_c) }}{% endmacro %}
{% macro throttle_now(temp, unit='f', tjmax_c=GPU_TJMAX) %}{{ cpu.throttle_now(temp, unit, tjmax_c) }}{% endmacro %}

